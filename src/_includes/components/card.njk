<li class="card">
  <div class="flow">
    {% if headingContext === "h2" %}
      <h2>
        <a href="{{ item.url | url }}">{{ item.data.title }}</a>
      </h2>
    {% else %}
      <h3>
        <a href="{{ item.url | url }}">{{ item.data.title }}</a>
      </h3>
    {% endif %}
    <div class="cluster">
      <span class="text-step-min-1">
        {% set definedDate = item.date %}
        {% include "components/date.njk" %}
      </span>
    </div>

    <p>{{ item.page.excerpt | markdown | striptags | safe or item.data.description }}</p>
  </div>
</li>
