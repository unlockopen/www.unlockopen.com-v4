---
layout: plain
---

<site-header></site-header>
<main
  :class="`${mainclass ? `${mainclass}` : ''}`"
  @raw="content"
  webc:root="override"
></main>
<site-footer></site-footer>

<style webc:scoped="main">
  :host {
    display: grid;
    grid-column: 1 / -1;
    grid-template-columns: subgrid;
    padding-block-start: var(--space-l-2xl);
    grid-template-rows: auto 1fr;
  }

  :host > * {
    grid-column: 1 / -1;
  }

  :host > section,
  :host > article {
    grid-column: 1 / -1;
    display: grid;
    column-gap: var(--section-column-gap, 0);
  }

  @media (min-width: 30em) {
    :host > section,
    :host > article {
      grid-column: 2 / -1;
    }
  }
</style>
